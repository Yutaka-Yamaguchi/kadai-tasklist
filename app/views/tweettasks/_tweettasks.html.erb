<ul class="media-list">
  <% tweettasks.each do |tweettask| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(tweettask.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to tweettask.user.name, user_path(tweettask.user) %> <span class="text-muted">posted at <%= tweettask.created_at %></span>
        </div>
        <div>
          <p>タスク：<%= tweettask.content %>　ステータス：<%= tweettask.status %></p>
        </div>
        <div>
          <% if current_user == tweettask.user %>
            <%= link_to "Delete", tweettask, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tweettasks %>
</ul>